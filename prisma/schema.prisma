generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

////////////////////////////////

enum PaymentMethod {
  BANK_TRANSFER
  CASH
  WALLET
}

enum BonusType {
  WELCOME
  ANNIVERSARY
  REWARD
}

enum PaymentState {
  PENDING
  GRANTED
  PAID
  CANCELLED
}

enum UserState {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum ReferralState {
  ENTERED
  VERIFYING
  APPROVED
  INSTALLED
  REJECTED
}

enum NotificationType {
  COMMISSION_CREATED
  COMMISSION_PAID
  BONUS_GRANTED
  PAYMENT_FAILED
  SYSTEM
  REFFERAL_STATUS
}

enum BankAccountType {
  SAVINGS
  CHECKING
}

///////////////////////////////

model User {
  id Int @id @default(autoincrement())
  //
  referredUser Referral?

  emailVerification EmailVerification[]

  terms TermsAcceptance?
  //
  email String @unique
  password String
  username String @unique
  emailVerified Boolean @default(false)
  state UserState @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)

  @@index([state])

}

model EmailVerification{
  id Int @id @default(autoincrement())
  //
  user User @relation(fields: [userId], references: [id])
  //
  userId Int
  token String
  expiresAt DateTime
  used Boolean
  createdAt DateTime @default(now())
}

model Referral {
  id Int @id @default(autoincrement())
  //
  referredUser User? @relation(fields: [referredId], references: [id])

  parent Referral? @relation("ReferralParent", fields: [parentId], references: [id])
  referral Referral[] @relation("ReferralParent")

  ancestors Tree[] @relation("TreeAncestor")

  descendants Tree[] @relation("TreeDescendant")

  commissions Commission[] @relation("beneficiary")

  bonus Bonus[]

  bankAccounts BankAccount[]

  notifications Notification[]

  payment Payment[]
  //
  name String
  identification String
  phone String @unique
  latitude String
  longitude String
  email String @unique
  state ReferralState @default(ENTERED)
  referredId Int? @unique
  parentId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)

  @@index([state])

}

model Tree {
  //
  ancestor Referral @relation("TreeAncestor", fields: [ancestorId], references: [id])
  descendant Referral @relation("TreeDescendant", fields: [descendantId], references: [id])
  //
  ancestorId Int
  descendantId Int
  depth Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([ancestorId, descendantId])
}

model Notification {
  id Int @id @default(autoincrement())
  //
  referral Referral? @relation(fields: [referralId], references: [id])
  //
  title String
  message String
  type NotificationType
  read Boolean @default(false)
  referralId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)
}

model BankAccount {
  id Int @id @default(autoincrement())
  //
  referral Referral @relation(fields: [referralId], references: [id])
  bonus Bonus[]
  commission Commission[]
  payment Payment[]
  //
  bankName String
  accountType BankAccountType
  accountNumber String
  holderName String?
  holderDocument String
  main Boolean @default(false)
  verified Boolean @default(false)
  referralId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)

  @@unique([referralId, main])
  @@index([referralId])
}

model TermsAcceptance{
  id Int @id @default(autoincrement())
  //
  user User @relation(fields: [userId], references: [id])
  //
  userId Int @unique
  termsVersion String
  privacyVersion String
  ipAddress String
  userAgent String
  acceptedAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)
  @@index([userId])
}

model Payment {
  id Int @id @default(autoincrement())
  //
  referral Referral @relation(fields: [referralId], references: [id])
  bankAccount BankAccount @relation(fields: [bankAccountId], references: [id])

  referralId Int
  bankAccountId Int

  commissions Commission[]
  bonuses Bonus[]
  //
  totalAmount Decimal @db.Decimal(10,2)
  status PaymentState @default(PENDING)
  method PaymentMethod
  reference String?
  paidAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([referralId])
  @@index([status])
}

model Commission {
  id Int @id @default(autoincrement())
  //
  beneficiary Referral @relation("beneficiary", fields: [beneficiaryId], references: [id])
  bankAccount BankAccount? @relation(fields: [bankAccountId], references: [id])
  payment Payment? @relation(fields: [paymentId], references: [id])

  beneficiaryId Int
  bankAccountId Int?
  paymentId Int?
  //
  state PaymentState @default(PENDING)
  percentage Decimal @db.Decimal(5,2)
  amount Decimal @db.Decimal(10,2)
  reference String?
  paidAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)

  @@index([state])
  @@index([paidAt])
  @@index([beneficiaryId])
}

model Bonus {
  id Int @id @default(autoincrement())
  //
  beneficiary Referral @relation(fields: [beneficiaryId], references: [id])
  bankAccount BankAccount? @relation(fields: [bankAccountId], references: [id])
  payment Payment? @relation(fields: [paymentId], references: [id])

  beneficiaryId Int
  bankAccountId Int?
  paymentId Int?
  //
  type BonusType
  amount Decimal
  state PaymentState @default(PENDING)
  reference String?
  paidAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)

  @@index([type])
  @@index([state])
  @@index([paidAt])
  @@index([beneficiaryId])
}