generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

////////////////////////////////

enum BonusType {
  WELCOME
  ANNIVERSARY
  REWARD
}

enum BonusState {
  PENDING
  GRANTED
  PAID
  CANCELLED
}

enum UserState {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum ReferralState {
  ENTERED
  VERIFYING
  APPROVED
  INSTALLED
  REJECTED
}

enum CommissionState {
  PENDING
  PAID
  CANCELLED
}
///////////////////////////////

model User {
  id Int @id @default(autoincrement())
  //
  referredUser Referral?

  emailVerification EmailVerification[]
  //
  email String @unique
  password String
  username String @unique
  emailVerified Boolean @default(false)
  state UserState @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)
}

model EmailVerification{
  id Int @id @default(autoincrement())
  //
  user User @relation(fields: [userId], references: [id])
  //
  userId Int
  token String
  expiresAt DateTime
  used Boolean
  createdAt DateTime @default(now())
}

model Referral {
  id Int @id @default(autoincrement())
  //
  referredUser User? @relation(fields: [referredId], references: [id])

  parent Referral? @relation("ReferralParent", fields: [parentId], references: [id])
  referral Referral[] @relation("ReferralParent")

  ancestors Tree[] @relation("TreeAncestor")

  descendants Tree[] @relation("TreeDescendant")

  commissions Commission[] @relation("beneficiary")

  commission Commission[] @relation("referral")

  bonus Bonus[]

  //
  name String
  identification String
  phone String @unique
  latitude String
  longitude String
  email String @unique
  state ReferralState @default(ENTERED)
  referredId Int? @unique
  parentId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)
}

model Tree {
  //
  ancestor Referral @relation("TreeAncestor", fields: [ancestorId], references: [id])
  descendant Referral @relation("TreeDescendant", fields: [descendantId], references: [id])
  //
  ancestorId Int
  descendantId Int
  depth Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([ancestorId, descendantId])
}

model Commission {
  id Int @id @default(autoincrement())
  //
  referral Referral @relation("referral",fields: [referralId], references: [id])
  beneficiary Referral @relation("beneficiary", fields: [beneficiaryId], references: [id])
  //
  referralId Int
  beneficiaryId Int
  state CommissionState @default(PENDING)
  percentage Decimal @db.Decimal(5,2)
  amount Decimal @db.Decimal(10,2)
  paidAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)
}

model Bonus {
  id Int @id @default(autoincrement())
  //
  beneficiary Referral @relation(fields: [beneficiaryId], references: [id])
  beneficiaryId Int
  //
  type BonusType
  referenceId Int? // venta, meta, campa√±a, etc
  amount Decimal
  state BonusState @default(PENDING)
  paidAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visible Boolean @default(true)

  @@index([beneficiaryId])
  @@index([type])
}